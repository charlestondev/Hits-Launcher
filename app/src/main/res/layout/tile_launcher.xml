<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_config"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="1dp"
    android:layout_marginBottom="1dp"
    android:background="#50000000"
    tools:context="com.hits.hitslauncher.ConfigActivity">

    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scaleType="centerInside"
        />
    <ImageView
        android:id="@+id/icon_remove"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_trash"/>

    <TextView
        android:id="@+id/touch_count"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="#3effffff"
        android:text="0"
        android:textColor="#fff"
        android:textSize="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/activity_config"/>
    <TextView
        android:id="@+id/label"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="#3effffff"
        android:textColor="#fff"
        android:textSize="10dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/activity_config" />
</android.support.constraint.ConstraintLayout>
